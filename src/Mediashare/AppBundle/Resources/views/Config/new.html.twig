{% extends "MediashareAppBundle::profile.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
<script src="//cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
    <div class="login-wrap2">
        {% if error %}
            <div class="alert alert-danger">
              {{error}}
            </div>
        {% endif %}
        <h2 class="page-header"><i class="fa fa-plus"></i> Create your Server</h2>
        {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
        <fieldset>

            <div class="form-group">
                {{ form_label(form.name) }}
                <div class="col-lg-9">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                <div class="col-lg-9">
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.link) }}
                <div class="col-lg-9">
                    {{ form_errors(form.link) }}
                    {{ form_widget(form.link) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.publicKey) }}
                <div class="col-lg-9">
                    {{ form_errors(form.publicKey) }}
                    {{ form_widget(form.publicKey) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.privateKey) }}
                <div class="col-lg-9">
                    {{ form_errors(form.privateKey) }}
                    {{ form_widget(form.privateKey) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    {{ form_rest(form) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <h3>Your CoinHive Key</h3>
                    <p>Go to the site of <a target="_blank" href="http://coin-hive.com"><strong>Coin-Hive</strong></a> for creating account. Generate your Public & Private Api Key <a target="_blank" href="https://coinhive.com/settings/sites"><strong>Here</strong></a>.</p>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="login-wrap2">
        <div class="intro">
            {% block info %}
                {% include 'MediashareAppBundle::_infoServer.html.twig' %}
            {% endblock %}
        </div>
       
            <script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
                CKEDITOR.replace( 'mediashare_appbundle_config_description' );
            </script>
    {% endblock fos_user_content %}